<%= form_for(@ticket) do |f| %>
	<% if @ticket.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

			<ul>
			<% @ticket.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>
	<div class="row">
		<div class="large-4 columns">
			<div class="field">
				<%= f.label :departure_date %><br>
				<%= f.date_select :departure_date %>
			</div>
		</div>
		<div class="large-4 columns">
			<div class="field">
				<%= f.label :arrival_date %><br>
				<%= f.date_select :arrival_date %>
			</div>
		</div>
		<div class="large-4 columns">
			<div class="field">
				<%= f.label :customer_category_id %><br>
				<%= f.select :customer_category_id, options_for_select(CustomerCategory.all.map{|s|[s.name,s.id]}) %><br>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="large-4 columns">
			<div class="field">
				<%= f.label :seat_category_id %><br>
				<%= f.select :seat_category_id, options_for_select(SeatCategory.all.map{|s|[s.name,s.id]}) %><br>
			</div>
		</div>
		<div class="large-4 columns">
			<div class="field">
				<%= f.label :customer_id %><br>
				<%= f.select :customer_id, options_for_select(Customer.all.map{|s|[s.name,s.id]}) %><br>
			</div>
		</div>
		<div class="large-4 columns">
			<div class="actions">
				<%= f.submit 'Submit', :class => 'button' %>
			</div>
		</div>
	</div>
<% end %>
