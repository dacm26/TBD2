<h1>Listing tickets</h1>

<table>
  <thead>
    <tr>
      <th>Departure date</th>
      <th>Arrival date</th>
      <th>Id customer category</th>
      <th>Id seat category</th>
      <th>Id customer</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.departure_date %></td>
        <td><%= ticket.arrival_date %></td>
        <td><%= ticket.customer_category_id %></td>
        <td><%= ticket.seat_category_id %></td>
        <td><%= ticket.customer_id %></td>
        <td><%= link_to 'Show', ticket %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

