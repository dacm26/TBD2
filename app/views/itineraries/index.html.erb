<div class="row">
	
	<h1>Listing itineraries</h1>

	<table>
		<thead>
			<tr>
				<th>Id origin city</th>
				<th>Id destiny city</th>
				<th>Departure time</th>
				<th>Arrival time</th>
				<th>Id airplane</th>
				<th></th>
				<th></th>
				<th></th>
			</tr>
		</thead>

		<tbody>
			<% @itineraries.each do |itinerary| %>
				<tr>
					<td><%= itinerary.origin_city_id %></td>
					<td><%= itinerary.destiny_city_id %></td>
					<td><%= itinerary.departure_time.to_formatted_s(:time) %></td>
					<td><%= itinerary.arrival_time.to_formatted_s(:time) %></td>
					<td><%= itinerary.airplane_id %></td>
					<td><%= link_to 'Show', itinerary %></td>
					<td><%= link_to 'Edit', edit_itinerary_path(itinerary) %></td>
					<td><%= link_to 'Destroy', itinerary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<%= link_to 'New Itinerary', new_itinerary_path, class: 'button' %>
</div>
